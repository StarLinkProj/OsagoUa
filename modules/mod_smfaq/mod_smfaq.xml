<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" method="upgrade">
	<name>mod_smfaq</name> 
	<creationDate>August 2012</creationDate>
	<author>Evgeniy Kalyada</author>
	<authorEmail>gener@inbox.ru</authorEmail>
	<authorUrl>http://www.color-rain.ru</authorUrl>
	<copyright>Copyright Info</copyright>
	<license>License Info</license>
	<version>1.0</version>
	<description>MOD_SMFAQ_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_smfaq">mod_smfaq.php</filename>
		<filename>mod_smfaq.xml</filename>
		<filename>index.html</filename>				
		<filename>helper.php</filename>
		<folder>tmpl</folder>
		<folder>js</folder>
		<folder>css</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="quantity" type="text"
						label="MOD_SMFAQ_TEXT_FIELD_QUANTITY"
						description="MOD_SMFAQ_TEXT_FIELD_QUANTITY_DESC" />	
				<field name="category_id" type="text"
						label="MOD_SMFAQ_TEXT_FIELD_CATEGORY_ID"
						description="MOD_SMFAQ_TEXT_FIELD_CATEGORY_ID_DESC" />	
				<field name="symbol_limit" type="text"
						label="MOD_SMFAQ_TEXT_FIELD_SYMBOL_LIMIT"
						description="MOD_SMFAQ_TEXT_FIELD_SYMBOL_LIMIT_DESC" />
				<field name="show_question" type="checkbox"
						label="MOD_SMFAQ_TEXT_FIELD_SHOW_QUESTION"
						value="1"
						description="MOD_SMFAQ_TEXT_FIELD_QUESTION_DESC" />
				<field name="show_tooltip_question" type="checkbox"
						label="MOD_SMFAQ_TEXT_FIELD_SHOW_TOOLTIP_QUESTION"
						value="1"
						description="MOD_SMFAQ_TEXT_FIELD_SHOW_TOOLTIP_QUESTION_DESC" />
				<field name="question_label" type="text"
						label="MOD_SMFAQ_TEXT_FIELD_QUESTION_LABEL"
						description="MOD_SMFAQ_TEXT_FIELD_QUESTION_LABEL_DESC" />
				<field name="question_link_type" type="radio" default="0" label="MOD_SMFAQ_TYPE_LINK_FIELD_QUESTION_LABEL" description="MOD_SMFAQ_TYPE_LINK_FIELD_QUESTION_LABEL_DESC">
					<option value="0">MOD_SMFAQ_TYPE_LINK_FIELD_QUESTION_VALUE_CATEGORY</option>
				  	<option value="1">MOD_SMFAQ_TYPE_LINK_FIELD_QUESTION_VALUE_QUESTION</option>
				  	<option value="2">MOD_SMFAQ_TYPE_LINK_FIELD_QUESTION_VALUE_NONE</option>
				</field>
				<field name="show_answer" type="checkbox"
						label="MOD_SMFAQ_TEXT_FIELD_SHOW_ANSWER"
						value="1"
						description="MOD_SMFAQ_TEXT_FIELD_ANSWER_DESC" />
				<field name="show_tooltip_answer" type="checkbox"
						label="MOD_SMFAQ_TEXT_FIELD_SHOW_TOOLTIP_ANSWER"
						value="1"
						description="MOD_SMFAQ_TEXT_FIELD_SHOW_TOOLTIP_ANSWER_DESC" />
				<field name="answer_label" type="text"
						label="MOD_SMFAQ_TEXT_FIELD_ANSWER_LABEL"
						description="MOD_SMFAQ_TEXT_FIELD_ANSWER_LABEL_DESC" />	
				<field name="after_text" type="text"
						label="MOD_SMFAQ_TEXT_FIELD_AFTERTEXT"
						description="MOD_SMFAQ_TEXT_FIELD_AFTERTEXT_DESC" />
				<field name="link_list_category_id" type="text"
						label="MOD_SMFAQ_TEXT_FIELD_LINK_LIST_CATEGORY_ID"
						description="MOD_SMFAQ_TEXT_FIELD_LINK_LIST_CATEGORY_ID_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout"
						label="JFIELD_ALT_LAYOUT_LABEL"
						description="JFIELD_ALT_MODULE_LAYOUT_DESC" />				
			</fieldset>
		</fields>
	</config>
		<!-- Файлы локализации -->
	<languages folder="language">
		<language tag="ru-RU">ru-RU/ru-RU.mod_smfaq.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.mod_smfaq.sys.ini</language>
	</languages>		
</extension>